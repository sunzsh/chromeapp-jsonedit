{
	"manifest_version": 2,
	"name": "JsonEditor",
	"version": "1.1.1",
	"description": "简单Json编辑器",
	"icons":
	{
		"16": "resources/icon.png",
		"48": "resources/icon.png",
		"128": "resources/icon.png"
	},
	"permissions":
	[
		"storage", "clipboardRead"
	],
	"homepage_url": "https://github.com/sunzsh",
    "app":
	{
		"launch": {
            "local_path": "index.html"
        }
	},
	"background": {
		"persistent": true,
		"page": "background.html"
	},
	
	"omnibox": { "keyword" : "json" },
	"content_security_policy": "script-src-elem 'self' data:;  object-src 'self'; script-src 'self'"
}
